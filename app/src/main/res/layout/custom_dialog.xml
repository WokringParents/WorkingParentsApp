<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/orangeborder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="제목"
            android:textSize="16dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >

            <EditText
                android:id="@+id/edit_ctitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="8"
                android:background="@drawable/border"
                android:hint="100자 이내로 작성해주세요"
                android:paddingLeft="10dp"
                android:textSize="13dp" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textSize="16dp"
                android:textColor="@color/black"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >


                <EditText
                    android:id="@+id/edit_ccontent"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="8"
                    android:background="@drawable/border"
                    android:paddingLeft="10dp"
                    android:hint="300자 이내로 작성해주세요"
                    android:textSize="13dp"
                    />



        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="16dp"
                />



            <RadioGroup
                android:id="@+id/radio_group_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"

                >

                <RadioButton
                    android:id="@+id/dadBtnDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:buttonTint="@color/main"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:id="@+id/momBtnDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:buttonTint="@color/main"
                    android:layout_weight="1"
                    />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">



            <Button
                android:id="@+id/btnDone"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/orangeborder"
                android:text="완료"
                android:textColor="@color/main"
                tools:ignore="TouchTargetSizeCheck" />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="취소"
                android:textColor="@color/main"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>