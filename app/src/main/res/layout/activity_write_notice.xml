<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteNoticeActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="13dp"
        android:weightSum="896"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/writeNotice_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:scaleType="fitStart"
                android:src="@drawable/backarrow" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:text="알림장 작성"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>



        <EditText
            android:id="@+id/notice_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="50"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:hint="제목을 입력해주세요"
            android:fontFamily="@font/notosans_regular"
            android:paddingLeft="10dp"
            android:includeFontPadding="false"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/notice_content"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_weight="400"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:hint="알림장 내용을 입력해주세요."
            android:gravity="start"
            android:fontFamily="@font/notosans_regular"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:includeFontPadding="false"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="100dp"
                android:layout_height="match_parent">

            </ImageView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imagerecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/buttonCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageButton
                    android:id="@+id/addimage_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round"
                    android:backgroundTint="@color/white"
                    android:scaleType="fitCenter"
                    android:src="@drawable/addimage" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="사진 첨부하기
                    (최대 10장)"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/btn_noticeFinish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:backgroundTint="#FF9769"
            android:text="작성하기"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>