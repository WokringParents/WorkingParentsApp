<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmLoadingActivity"
    android:background="#5BDCDCDC">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/addCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="게시글 작성"
            android:textColor="@color/main"
            android:textSize="30dp"
            android:fontFamily="@font/titlegothic4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이웃에게 도움을 요청해보세요"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/NotifyWordCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(0/500)"
                />


        </LinearLayout>


        <EditText
            android:id="@+id/inputContent"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/orangeborder"
            android:backgroundTint="#5BDCDCDC"
            android:maxLength="300"
            android:gravity="top"
            android:text="오늘 저희 아이하원 가능하신분 계실까요? ㅠㅠ"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            </View>

            <RadioGroup
                android:id="@+id/radio_group_goback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <RadioButton
                    android:id="@+id/goBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="등원"
                    android:layout_marginRight="10dp"
                    android:buttonTint="@color/main"
                    />

                <RadioButton
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하원"
                    android:buttonTint="@color/main"
                    android:checked="true"
                    />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/postingListBt"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/orangeborder"
                android:text="글 목록"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:backgroundTint="#79DCDCDC"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/completeBt"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/orangeborder"
                android:text="작성 완료"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:backgroundTint="#5BDCDCDC"/>


        </LinearLayout>

    </LinearLayout>





    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="168dp"
        app:cpb_background_progressbar_color="#dbdbdb"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:srcCompat="@drawable/near" />




</androidx.constraintlayout.widget.ConstraintLayout>