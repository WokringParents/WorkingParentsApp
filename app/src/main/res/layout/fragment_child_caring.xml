<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildCaringFragment"
    android:id="@+id/container2"
    android:background="@color/white"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
     >


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="홈"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/main"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21.5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="0.5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clickable_layout_month">

                <TextView
                    android:id="@+id/yearTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2020"
                    android:textColor="@color/black"
                    android:textSize="16sp"


                    />

                <TextView
                    android:id="@+id/hangulTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:text="년"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/notosans_medium"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/hangulTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="월"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/clickable_layout_week">
                <TextView
                    android:id="@+id/selectedWeek"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="-0.5dp"
                    android:background="@drawable/rect_main_color_radius_9dp"
                    android:gravity="center"
                    android:text="1주차"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="visible"
                    />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="6dp"
                    android:src="@drawable/arrow_down"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="visible"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_with_shadow"
                android:layout_marginLeft="7dp"
                android:paddingTop="1dp"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                android:id="@+id/visible_layout_week_choice">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                  >
                    <TextView
                        android:id="@+id/weektext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="week"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="0dp">
                    <TextView
                        android:id="@+id/week1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        />

                    <TextView
                        android:id="@+id/week2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/week3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/week4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/week5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/week6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/background_with_shadow"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="10dp"
            android:visibility="gone"
            android:id="@+id/visible_layout_month_choice"
            android:weightSum="3"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/month1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/month2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/month3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/month4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/month5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/month6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/month7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/month8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center_horizontal"
              >

                <TextView
                    android:id="@+id/month9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:id="@+id/month10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:layout_weight="1"
                    android:gravity="center"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/month11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="11"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/month12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
         >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/monTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="월"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/monDateTV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"

                    android:text="10"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:gravity="center"

                    android:background="@drawable/pastdatecircle"
                    android:textColor="@color/pastDate"
                    android:fontFamily="@font/notosans_medium"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="화"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tueDateTV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:text="11"

                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:gravity="center"

                    android:textColor="@color/pastDate"
                    android:background="@drawable/pastdatecircle"
                     />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wenTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="수"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/wenDateTV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:text="12"

                    android:background="@drawable/todaydatecircle"
                    android:textColor="@color/todayDate"

                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:gravity="center"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/thuTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="목"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/thuDateTV"
                    android:layout_marginTop="11dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="13"

                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:elevation="7dp"
                    android:background="@drawable/comingdatecircle"
                    android:textColor="@color/comingDate"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/friTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="금"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/friDateTV"
                    android:layout_marginTop="11dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="14"
                    android:textSize="13sp"

                    android:elevation="7dp"
                    android:textColor="@color/comingDate"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/comingdatecircle"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/satTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="토"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/satDateTV"
                    android:layout_marginTop="11dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="16"

                    android:elevation="7dp"
                    android:textSize="13sp"
                    android:textColor="@color/comingDate"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/comingdatecircle"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sunTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="일"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/sunDateTV"
                    android:layout_marginTop="11dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"

                    android:elevation="7dp"
                    android:textSize="13sp"
                    android:textColor="@color/comingDate"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/comingdatecircle"


                    android:text="17" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/fordaily"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:text="For Daily"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/fullWeekBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/black_plus"
                android:background="@drawable/circle_main_border"
                android:layout_gravity="center"
                 />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dailyListRecyclerView"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/fortoday"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:text="For Today"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/oneDayBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/black_plus"
                android:background="@drawable/circle_main_border"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todayListRecyclerView"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>