<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="15dp"
      >

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:src="@drawable/wps" />

      <TextView
          android:id="@+id/text_logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:fontFamily="@font/titlegothic5"
          android:text="워킹패런츠"
          android:textColor="@color/main"
          android:textSize="25sp" />

      <EditText
          android:id="@+id/edit_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          android:backgroundTint="@color/light_gray"
          android:hint="아이디를 입력하세요"
          android:paddingBottom="15dp"
          android:textSize="14sp"
          android:maxLines="1"
          android:fontFamily="@font/notosans_regular"
          android:includeFontPadding="false"
          android:theme="@style/EditTheme"
          android:inputType="text"
          />

      <EditText
          android:id="@+id/edit_pw"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:backgroundTint="@color/light_gray"
          android:hint="비밀번호를 입력하세요"
          android:maxLines="1"
          android:inputType="textPassword"
          android:paddingBottom="15dp"
          android:textSize="14sp"
          android:fontFamily="@font/notosans_regular"
          android:includeFontPadding="false"
          android:theme="@style/EditTheme"
          />

      <Button
          android:id="@+id/btn_login"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/border"
          android:backgroundTint="#FF9769"
          android:text="로그인"
          android:textColor="@color/white"
          android:textSize="14sp"/>


      <Button
          android:id="@+id/btn_ssam"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/orangeborder_slim"
          android:fontFamily="@font/notosans_regular"
          android:text="임시 선생님 자동로그인"
          android:textColor="@color/main"
          android:textSize="14sp"
          android:textStyle="italic" />

      <Button
          android:id="@+id/btn_join"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/whiteborder"
          android:text="회원가입"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:fontFamily="@font/notosans_regular"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">


         <RadioButton
             android:id="@+id/remain_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:buttonTint="@color/main"
             android:fontFamily="@font/notosans_regular"
             android:text="로그인 상태 유지"
             android:textSize="13sp"
             android:layout_marginLeft="-4dp"/>

         <View
             android:layout_width="0dp"
             android:layout_height="0dp"
             android:layout_weight="1" />

         <TextView
             android:id="@+id/find_idpw"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/loginpw"
             android:textSize="13sp"
             android:fontFamily="@font/notosans_regular"/>

      </LinearLayout>

      <TextView
          android:id="@+id/ezlogintext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="50dp"
          android:text="간편 로그인"
          android:fontFamily="@font/notosans_regular"
          android:textColor="@color/dark_gray"
          android:textSize="13sp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal">


         <ImageButton
             android:id="@+id/ezlogin"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/round"
             android:backgroundTint="@color/white"
             android:scaleType="centerInside"
             android:src="@drawable/googlepng" />

         <ImageButton
             android:id="@+id/ezlogin2"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/round"
             android:backgroundTint="@color/white"
             android:scaleType="centerInside"
             android:src="@drawable/facebook" />

         <ImageButton
             android:id="@+id/ezlogin3"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/round"
             android:backgroundTint="@color/white"
             android:scaleType="centerInside"
             android:src="@drawable/kakao" />

         <ImageButton
             android:id="@+id/ezlogin4"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/round"
             android:backgroundTint="@color/white"
             android:scaleType="centerInside"
             android:src="@drawable/naver" />
      </LinearLayout>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>