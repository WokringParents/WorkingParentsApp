<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="4dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/rect_dark_gray_radius_10dp" />


        <TextView
            android:id="@+id/moreContentTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:text="content"
            android:textColor="#191919"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <Button
                android:id="@+id/moreModifyBtn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rect_light_gray_radius_10dp"
                android:drawableTop="@drawable/modifysize"
                android:drawablePadding="5dp"
                android:paddingVertical="13dp"
                android:text="수정"
                android:textColor="#212121"
                android:textSize="14dp" />

            <Button
                android:id="@+id/moreDeleteBtn"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/rect_light_gray_radius_10dp"
                android:drawableTop="@drawable/trashsize"
                android:drawablePadding="5dp"
                android:paddingVertical="13dp"
                android:text="삭제"
                android:textColor="#212121"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
