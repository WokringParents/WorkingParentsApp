<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CoupleConnectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/wps"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/basicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="부부연결로 함께하는 워킹패런츠"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/basicText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:text="이지현님의 코드"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/codeText"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&quot;         &quot;"
            android:gravity="center_horizontal"
            />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="@color/main"
            />


        <Button
            android:id="@+id/createCodeBtn"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="코드 발급 받기"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/orangeborder"
            android:textColor="@color/white"
            android:backgroundTint="@color/main"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/inputCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="배우자 코드 입력"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/main"
            android:background="@drawable/orangeborder3"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>