<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity2"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="fitStart"
                android:padding="0dp"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                android:src="@drawable/backarrow" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:text="회원가입"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="19sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="이름"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_regular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            >

            <EditText
                android:id="@+id/edit_joinID"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="이름을 등록하세요"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:inputType="text"
                android:layout_weight="8"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:theme="@style/EditTheme"
                android:maxLines="1"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_regular"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            >

            <EditText
                android:id="@+id/join_city"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingLeft="20dp"
                android:hint="시/군/구"
                android:textSize="14sp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:theme="@style/EditTheme"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/join_village"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:hint="동/읍/면"
                android:textSize="14sp"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:theme="@style/EditTheme"
                android:maxLines="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="휴대폰 번호"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_regular"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            >

            <EditText
                android:id="@+id/edit_pnumber"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="번호를 입력하세요"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:inputType="text"
                android:layout_weight="8"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:theme="@style/EditTheme"
                android:maxLines="1"

                />
        </LinearLayout>


        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="생년월일"
            android:textColor="@color/black"
            android:textSize="15sp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">


            <NumberPicker
                android:id="@+id/yearSpinner"
                android:layout_width="wrap_content"
                android:theme="@style/AppTheme.NumberPicker"
                android:descendantFocusability="blocksDescendants"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="년"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/monthSpinner"
                android:layout_width="wrap_content"
                android:theme="@style/AppTheme.NumberPicker"
                android:descendantFocusability="blocksDescendants"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="월"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />



            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <NumberPicker
                android:id="@+id/daySpinner"
                android:layout_width="wrap_content"
                android:theme="@style/AppTheme.NumberPicker"
                android:descendantFocusability="blocksDescendants"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="일"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/notosans_regular"
                android:text="성별"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <RadioGroup
                android:layout_marginLeft="10dp"
                android:id="@+id/radio_group_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <RadioButton
                    android:id="@+id/dadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/main"
                    android:fontFamily="@font/notosans_regular"
                    android:text="남성"
                    android:textColor="#767676"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/momBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/main"
                    android:fontFamily="@font/notosans_regular"
                    android:text="여성"
                    android:textColor="#767676"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:layout_marginTop="26dp"
            android:id="@+id/btn_joinFinish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border"
            android:backgroundTint="#FF9769"
            android:text="가입하기"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>